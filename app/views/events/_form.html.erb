<%= form_for @event, data: {turbo: false} do |f| %>
  <%= render partial: "partials/form_errors", locals: {model: @event} %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: "form-control" %></p>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t "views.form.save", class: "btn btn-primary" %>
    <%= t "views.form.or" %>
    <%= link_to I18n.t("views.form.back"), "/" %>
  </div>
<% end %>
