<h2><%= t("views.users.edit_data")%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="border-top font-weight-bold col-6 col-sm-12">
    <div class="field">
      <p><%= f.label :email, class:"my-3 col-md-6 col-sm-12" %></p>
      <p><%= f.email_field :email, class:"mx-2 col-md-6 col-sm-12 col-form-label", autofocus: true, autocomplete: "email" %></p>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t("waiting_info") %> <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field d-flex justify-content-start">
      <div><%= f.label :password, class:"my-3 col-md-6 col-sm-12" %>
        <i class="my-3 font-weight-normal"><%= t("views.form.leave_blank") %></i>
      </div>
    </div>

    <div>
      <%= f.password_field :password, class:"mx-2 col-md-6 col-sm-12 col-form-label", autocomplete: "new-password" %>
    </div>
    
    <% if @minimum_password_length %>
      <em class="px-3 my-3 font-weight-normal col-md-6 col-sm-12"><%= @minimum_password_length %> <%= t("characters_minimum") %></em>
    <% end %>

    <div class="field">
      <div><%= f.label :password_confirmation, class:"my-3 col-md-6 col-sm-12" %></div>
      <div>
        <%= f.password_field :password_confirmation, class:"mx-2 col-md-6 col-sm-12 col-form-label", 
        autocomplete: "new-password" %>
      </div>
    </div>

    <div class="field ">
      <div class="d-flex align-items-center col-md-6 col-sm-12">
        <%= f.label :current_password, class:"my-3" %>
        <i class="my-3 font-weight-normal"><%= t("views.form.need_password") %></i>
      </div>

      <div>
        <%= f.password_field :current_password, class:"mx-2 col-md-6 col-sm-12 col-form-label", autocomplete: "current-password" %>
      </div>
    </div>

    <div class="actions mx-2 my-3">
      <%= f.submit t("update"), class:"btn btn-warning" %>
      <%= t "views.form.or" %>
      <%= button_to I18n.t("views.form.back"), :back, class:"btn btn-primary" %>
    </div>
  </div>
<% end %>

<h3><%= t("delete_acc") %></h3>

<p class="mx-4 px-4 buffer-bottom"><%= t("unhappy") %> 
  <%= button_to I18n.t("cancel_acc"),
  registration_path(resource_name),
  form: { data: { turbo_confirm: t("are_you_sure") } },
  class:"btn btn-lg btn-danger",
  method: :delete %></p>
