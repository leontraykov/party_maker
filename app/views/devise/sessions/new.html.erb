<h2><%= t("views.navi.sign_in") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="border-top font-weight-bold col-sm-12">

    <div class="form-group row field">
      <p><%= f.label :email, class:"my-3 col-sm-2" %></p>
      <p><%= f.email_field :email, class:"mx-2 col-sm-6 col-form-label", autofocus: true, autocomplete: "email" %></p>
    </div>

    <div class="field">
      <p><%= f.label :password, class:"my-3 col-sm-2" %></p>
      <p><%= f.password_field :password, class:"mx-2 col-sm-6 col-form-label", autocomplete: "current-password" %></p>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mx-2 py-3 field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions btn-lg buffer-both ">
      <%= f.submit t("views.navi.sign_in") %>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>
